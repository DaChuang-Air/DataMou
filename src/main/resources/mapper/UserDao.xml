<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luoliyong.dc.dao.UserDao">

       <resultMap type="com.luoliyong.dc.model.User" id="UserDao">
              <id property="id" column="id"/>
              <result property="name" column="name"/>
       </resultMap>

       <sql id="Base_Column_List">id,name</sql>

       <select id="findOne" resultMap="UserDao">
              select <include refid="Base_Column_List"/> from user where id = #{id}
       </select>

       <insert id="insert" parameterType="com.luoliyong.dc.model.User">
              insert into user(
              id,name)
              values
              (
              #{id},
              #{name})
       </insert>

</mapper> 